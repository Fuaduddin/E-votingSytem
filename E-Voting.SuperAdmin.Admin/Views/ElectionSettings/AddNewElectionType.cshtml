@model Evoting.Models.SuperAdminAndAdminViewModel
@{
    ViewBag.Title = "AddNewElectionType";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">ADD New Election Type</h4>

                @using (Html.BeginForm("AddNewElectionType", "ElectionSettings", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.HiddenFor(Model => Model.ElectionType.ElectionID)
                    <div class="form-group">
                        <label for="exampleInputUsername1">Enter Election Type</label>
                        @Html.TextBoxFor(Model => Model.ElectionType.ElectionName, new { @class = "form-control", id = "exampleInputUsername1", @placeholder = "Enter Election Type" });
                        @Html.ValidationMessageFor(Model => Model.ElectionType.ElectionName)
                    </div>
                    if (Model.ElectionType.ElectionID > 0 && Model.ElectionType != null)
                    {
                        <button type="submit" class="btn btn-success mr-2">Update</button>
                        <button class="btn btn-light">Cancel</button>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-success mr-2">Submit</button>
                        <button class="btn btn-light">Cancel</button>
                    }

                }
            </div>
        </div>
    </div>
    <div class="col-lg-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Election Type Details Table</h4>
                <p class="card-description">
                    Election <code>Type</code>
                </p>
                <div class="table-responsive">
                    <div class="">
                        <h5 style="color:red">@ViewData["Message"]</h5>
                    </div>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>Election Type</th>
                                <th>Update Details</th>
                                <th>Delete Details</th>
                            </tr>
                        </thead>
                        <tbody id="electionpagination">
                            @if (Model.ElectionTypeList.Count > 0)
                            {
                                int serialno = 1;
                                foreach (var electiontype in Model.ElectionTypeList)
                                {

                                    <tr class="removeitem">
                                        <td>@serialno</td>
                                        <td>@electiontype.ElectionName</td>
                                        <td>
                                            @Html.ActionLink("Delete", "DeleteElectionType", new { Id = @electiontype.ElectionID }, new { @class = "btn btn-danger", type = "button" })
                                        </td>
                                    </tr>
                                    serialno++;
                                }
                            }
                            else
                            {
                                <tr>
                                    <td> <h6 style="color:red; text-align:center"> <b>NO DATA FOUND</b> </h6> </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
            <nav aria-label="Page navigation example" class="paginationindexpage">
                <ul class="pagination">
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    @for (var i = 1; i <= Model.TotalPage; i++)
                    {
                        <li class="page-item"><a class="page-link" href="#" onclick="PaginationItems(@i)">@i</a></li>
                    }
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>


<style>
    .paginationindexpage {
        display: flex !important;
        justify-content: center !important;
    }
</style>
<script>
    function PaginationItems(pageindex) {
        var PagenationDetails =
        {
            pageindex: pageindex,
            pagesize: 10
        }
        $.ajax({
            url: "/ElectionSettings/GetpaginatiotabledataElectiontype",
            Method: "POST",
            data: PagenationDetails,
            success: function (data) {
                $(".removeitem").remove();
                data = JSON.parse(data);
                var serialno = 1;
                var element = "";
                $.each(data, function (i) {
                        element += `
    <tr class="removeitem">
        <td>${serialno}</td>
        <td>${data[i].ElectionName}</td>
        <td>
            <a class = "btn btn-danger" href="/ElectionSettings/DeleteElectionType/${data[i].ElectionID}">Delette</a>
        </td>
    </tr>

                                        `;
                    $("#electionpagination").append(element);
                    serialno++;
                    var element = "";
                });
            },
            error: function () {
                alert('Failed to receive the Data');
                console.log('Failed ');
            }
        });
    }
</script>


