@model Evoting.Models.SuperAdminAndAdminViewModel

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Election Details Table</h4>
                <p class="card-description">
                    Election <code>Details</code>
                </p>
                <div class="table-responsive">
                    <div class="">
                        <h5 style="color:red">@ViewData["Message"]</h5>
                    </div>
                    <div class="mb-3">
                        <input type="email" class="form-control searchbox" id="exampleFormControlInput1" onchange="SearchItems()" placeholder="Search.....">
                    </div>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>Election Title</th>
                                <th>Election Description</th>
                                <th>Election Type</th>
                                <th>Election Details</th>
                                <th>Update</th>
                                <th>Delete</th>
                                <th>Assing Election</th>
                            </tr>
                        </thead>
                        <tbody id="electionpagination">
                            @if (Model.ElectionDetailsList.Count > 0)
                            {
                                int serialno = 1;
                                foreach (var electiondetails in Model.ElectionDetailsList)
                                {

                                    <tr class="removeitem">
                                        <td>@serialno</td>
                                        <td>@electiondetails.ElectionName</td>
                                        <td>@electiondetails.ElectionDetails</td>
                                        <td>@electiondetails.ElectionTypeDetails.ElectionName</td>
                                        <td>
                                            <span><b><i>Starting Date: </i></b>@electiondetails.StartDate.ToString("dd/MM/yyyy, hh:mm")</span> <br />
                                            <span><b><i>Ending Date: </i></b>@electiondetails.EndDate.ToString("dd/MM/yyyy, hh:mm")</span> <br />
                                        </td>
                                        <td>
                                            <button type="button" class="btn btn-success btn-rounded btn-fw">Update</button>
                                        </td>
                                        <td>
                                            @Html.ActionLink("Delete", "DeleteElectionDetails", new { Id = electiondetails.ElectionID }, new { @class = "btn btn-danger", type = "button" })
                                        </td>
                                        <td>
                                            @Html.ActionLink("Assign Area Election", "AssignElection", new { Id = electiondetails.ElectionID }, new { @class = "btn btn-danger", type = "button" })
                                        </td>
                                    </tr>
                                    serialno++;
                                }
                            }
                            else
                            {
                                <tr>
                                    <td> <h6 style="color:red; text-align:center"> <b>NO DATA FOUND</b> </h6> </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<nav aria-label="Page navigation example" class="paginationindexpage">
    <ul class="pagination">
        <li class="page-item">
            <a class="page-link" href="#" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
            </a>
        </li>
        @for (var i = 1; i <= Model.TotalPage; i++)
        {
            <li class="page-item"><a class="page-link" href="#" onclick="PaginationItems(@i)">@i</a></li>
        }
        <li class="page-item">
            <a class="page-link" href="#" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
            </a>
        </li>
    </ul>
</nav>
<style>
    .paginationindexpage {
        display: flex !important;
        justify-content: center !important;
    }
</style>
<script>
    function PaginationItems(pageindex) {
        var PagenationDetails =
        {
            pageindex: pageindex,
            pagesize: 10
        }
        $.ajax({
            url: "/AppointmentAnnoucement/GetpaginatiotabledataAnnoucement",
            Method: "POST",
            data: PagenationDetails,
            success: function (data) {
                $(".removeitem").remove();
                data = JSON.parse(data);
                var serialno = 1;
                var element = "";
                $.each(data, function (i) {
                    element += `
    <tr class="removeitem">
        <td>${serialno}</td>
        <td>${data[i].ElectionName}</td>
        <td>${data[i].ElectionDetails}</td>
        <td>${data[i].ElectionTypeDetails.ElectionName}</td>
        <td>
            <span><b><i>Starting Date: </i></b>${data[i].StartDate}</span> <br />
            <span><b><i>Ending Date: </i></b>${data[i].EndDate}</span> <br />
        </td>
        <td>
            <a class = "btn btn-danger" href="/ElectionSettings/GetSingleElectionDetails/${data[i].ElectionID}">Update</a>
        </td>
        <td>
            <a class = "btn btn-danger" href="/ElectionSettings/DeleteElectionDetails/${data[i].ElectionID}">Delete</a>
        </td>
        <td>
            <a class = "btn btn-danger" href="/ElectionSettings/GetSingleAssignmentElectionIDDetails/${data[i].ElectionID}">Assign Election</a>
        </td>
    </tr>
                                        `;
                    $("#electionpagination").append(element);
                    serialno++;
                    var element = "";
                });
            },
            error: function () {
                alert('Failed to receive the Data');
                console.log('Failed ');
            }
        });
    }
    function SearchItems() {
        var PagenationDetails =
        {
            Search: $(".searchbox").val()
        }
        $.ajax({
            url: "/AppointmentAnnoucement/SearchAnnoucement",
            Method: "POST",
            data: PagenationDetails,
            success: function (data) {
                $(".removeitem").remove();
                data = JSON.parse(data);
                var serialno = 1;
                var element = "";
                $.each(data, function (i) {
                    element += `
    <tr class="removeitem">
        <td>${serialno}</td>
        <td>${data[i].ElectionName}</td>
        <td>${data[i].ElectionDetails}</td>
        <td>${data[i].ElectionTypeDetails.ElectionName}</td>
        <td>
            <span><b><i>Starting Date: </i></b>${data[i].StartDate}</span> <br />
            <span><b><i>Ending Date: </i></b>${data[i].EndDate}</span> <br />
        </td>
        <td>
            <a class = "btn btn-danger" href="/ElectionSettings/GetSingleElectionDetails/${data[i].ElectionID}">Update</a>
        </td>
        <td>
            <a class = "btn btn-danger" href="/ElectionSettings/DeleteElectionDetails/${data[i].ElectionID}">Delete</a>
        </td>
        <td>
            <a class = "btn btn-danger" href="/ElectionSettings/GetSingleAssignmentElectionIDDetails/${data[i].ElectionID}">Assign Election</a>
        </td>
    </tr>                               `;
                    $("#electionpagination").append(element);
                    serialno++;
                    var element = "";
                });
            },
            error: function () {
                alert('Failed to receive the Data');
                console.log('Failed ');
            }
        });
    }
</script>