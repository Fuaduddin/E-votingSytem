@model Evoting.Models.SuperAdminAndAdminViewModel

@{
    ViewBag.Title = "GetAllAppointment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-12 grid-margin">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">ADD New Annoucement</h4>
            @using (Html.BeginForm("AddNewAnnoucement", "AppointmentAnnoucement", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.HiddenFor(Model => Model.Annoucement.AnnoucemntID)
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Annoucement Title</label>
                            <br />
                            <div class="col-sm-9">
                                @Html.TextBoxFor(model => model.Annoucement.AnnoucementTitle, new { @class = "form-control", @placeholder = "Annoucement Title" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Annoucement Details</label>
                            <div class="col-sm-9">
                                @Html.TextAreaFor(Model => Model.Annoucement.AnoucementDetails, new { @class = "form-control", rows = "6", placeholder = "Annoucement Details" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        @if (Model.Annoucement.AnnoucemntID > 0 && Model.Annoucement.AnnoucementImage.Length > 0)
                        {
                            <img src="@Model.Annoucement.AnnoucementImage" alt="image">
                        }
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Image</label>
                            <div class="col-sm-9">
                                <input class="form-control" type="file" id="formFile" name="File">
                            </div>
                        </div>
                    </div>
                </div>
                if (Model.Annoucement.AnnoucemntID > 0 && Model.Annoucement != null)
                {

                    <button type="submit" class="btn btn-success mr-2">Update</button>
                    <button class="btn btn-light">Cancel</button>
                }
                else
                {

                    <button type="submit" class="btn btn-success mr-2">Submit</button>
                    <button class="btn btn-light">Cancel</button>
                }
            }
        </div>
    </div>
</div>


