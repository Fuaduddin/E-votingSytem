@model Evoting.Models.SuperAdminAndAdminViewModel

@{
    ViewBag.Title = "GetAllAnnoucement";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Annoucement Details Table</h4>
                <p class="card-description">
                    Annoucement <code>Details</code>
                </p>
                <div class="table-responsive">
                    <div class="">
                        <h5 style="color:red">@ViewData["Message"]</h5>
                    </div>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>Annoucement Title</th>
                                <th>Annoucement Description</th>
                                <th>Annoucement Image</th>
                                <th>Annoucement Published Date</th>
                                <th>Delete</th>
                                <th>Update</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.AnnoucementList.Count > 0)
                            {
                                int serialno = 1;
                                foreach (var Annoucementdetails in Model.AnnoucementList)
                                {

                                    <tr>
                                        <td>@serialno</td>
                                        <td>@Annoucementdetails.AnnoucementTitle</td>
                                        <td>@Annoucementdetails.AnoucementDetails</td>
                                        @if (Annoucementdetails.AnnoucementImage.Length > 0)
                                        {
                                            <td class="py-1">
                                                <img src="@Annoucementdetails.AnnoucementImage" alt="image">
                                            </td>
                                        }
                                        else
                                        {
                                            <td class="py-1">
                                                <img src="" alt="image">
                                            </td>
                                        }

                                        <td>@Annoucementdetails.PublishedDate</td>
                                        <td>
                                            @Html.ActionLink("Delete", "DeleteAnnoucement", new { Id = Annoucementdetails.AnnoucemntID }, new { @class = "btn btn-danger", type = "button" })
                                        </td>
                                        <td>
                                            @Html.ActionLink("Update", "GetSingleAnnoucement", new { Id = Annoucementdetails.AnnoucemntID }, new { @class = "btn btn-danger", type = "button" })
                                        </td>
                                    </tr>
                                    serialno++;
                                }
                            }
                            else
                            {
                                <tr>
                                    <td> <h6 style="color:red; text-align:center"> <b>NO DATA FOUND</b> </h6> </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

