@model Evoting.Models.SuperAdminAndAdminViewModel

@{
    ViewBag.Title = "AddNewAssignment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-12 grid-margin">
    <div class="card">
        @if (Model.Appointment.AppointmentID > 0)
        {
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <h4 class="card-title"> <b><i>Subject: </i></b> <br/> @Model.Appointment.AppointmentSubject</h4>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <p>
                            <b><i>Details: </i></b><br />  @Model.Appointment.AppointmentDetails
                        </p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="col-md-6">
                            <h5>
                                <b><i>Email ID: </i></b>@Model.Appointment.UserEmaul
                            </h5>
                        </div>
                        <div class="col-md-6">
                            <h5>
                                <b><i>Phone Number: </i></b>@Model.Appointment.UserPhoneNumber
                            </h5>
                        </div>
                    </div>
                </div>
                @if (Model.AssignemntAppointment.AssignmentID > 0)
                {
                    <div class="row">
                        <div class="col-md-6">
                            <h5>
                                <b><i>Admin Name: </i></b>@Model.AssignemntAppointment.Admin.AdminName
                            </h5>
                        </div>
                        <div class="col-md-6">
                            <h5>
                                <b><i>Assig Date: </i></b>@Model.AssignemntAppointment.AssignmentIssueDate
                            </h5>
                        </div>
                        @if (Model.AssignemntAppointment.AssignmentIssueDate != null)
                        {
                            <div class="col-md-6">
                                <h5>
                                    <b><i>Assig Date: </i></b>@Model.AssignemntAppointment.AssignmentIssueDate
                                </h5>
                            </div>
                        }
                        else
                        {
                            <div class="col-md-6">
                                <h5>
                                    <b><i>Pending </i></b>
                                </h5>
                            </div>
                        }

                    </div>
                }

            </div>
        }
        <div class="card-body">
            @using (Html.BeginForm("AddNewAssignment", "AppointmentAnnoucement", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.HiddenFor(Model => Model.AssignemntAppointment.AssignmentID)
                @Html.HiddenFor(Model => Model.Appointment.AppointmentID)
                <div class="d-flex">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="exampleFormControlSelect1">Assign Admin</label>
                            @Html.DropDownListFor(model => model.AssignemntAppointment.AdminID, new SelectList(Model.AdminList, "AdminID", "AdminName"), new { @class = "form-control form-control-lg", id = "exampleFormControlSelect1" })
                            @Html.ValidationMessageFor(Model => Model.AssignemntAppointment.AdminID)
                        </div>
                    </div>
                </div>
                <div class="mt-3">
                    @if (Model.AssignemntAppointment.AssignmentID > 0)
                    {
                        <button type="submit" class="btn btn-success mr-2">Update</button>
                        <button class="btn btn-light">Cancel</button>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-success mr-2">Submit</button>
                        <button class="btn btn-light">Cancel</button>
                    }
                </div>
            }
        </div>
    </div>

</div>

