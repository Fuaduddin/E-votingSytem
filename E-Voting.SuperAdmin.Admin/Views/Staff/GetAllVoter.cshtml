@model Evoting.Models.SuperAdminAndAdminViewModel

@{
    ViewBag.Title = "GetAllVoter";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Voter Table</h4>
                <p class="card-description">
                    Voter <code>Details</code>
                </p>
                <div class="table-responsive">
                    <div class="">
                        <h5 style="color:red">@ViewData["Message"]</h5>
                    </div>
                    <div class="mb-3">
                        <input type="email" class="form-control searchbox" id="exampleFormControlInput1" onchange="SearchItems()" placeholder="Search.....">
                    </div>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>Voter Image</th>
                                <th>Voter Details</th>
                                <th>Contact Information</th>
                                <th>Address Details</th>
                                <th>User Profile Details</th>
                                <th>User Profile Status</th>
                                <th>Delete</th>
                                <th>Update</th>
                                <th>Active ID</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.VoterList.Count > 0)
                            {
                                int serialno = 1;
                                foreach (var VoterDetails in Model.VoterList)
                                {

                                    <tr class="removeitem">
                                        <td>
                                            @serialno
                                        </td>
                                        <td class="py-1">
                                            <img src="@VoterDetails.VoterImage" alt="image">
                                        </td>
                                        <td>
                                            <span><b><i>Full Name: </i></b>@VoterDetails.VoterName</span> <br />
                                            <span><b><i>Gender: </i></b>@VoterDetails.VoterGender</span> <br />
                                            <span><b><i>User ID </i></b>@VoterDetails.User.UserID</span> <br />
                                        </td>
                                        <td>
                                            <span><b><i>Phone Number: </i></b>@VoterDetails.VoterPhoneNumber</span> <br />
                                            <span><b><i>Email Address: </i></b>@VoterDetails.VoterEmail</span> <br />
                                        </td>
                                        <td>
                                            <span><b><i>Zone Name: </i></b>@VoterDetails.Zone.ZoneName</span> <br />
                                            <span><b><i>Area Name: </i></b>@VoterDetails.Area.AreaName</span> <br />
                                            <span><b><i>Permanent Address: </i></b>@VoterDetails.VoterPermanentAddress</span> <br />
                                            <span><b><i>Present Address: </i></b>@VoterDetails.VoterPresentAddress</span> <br />
                                        </td>
                                        <td>
                                            <span><b><i>Last Login: </i></b>@VoterDetails.User.UserLastLogin.ToString("dd/MM/yyyy, hh:mm")</span> <br />
                                            <span><b><i>Total Login: </i></b>@VoterDetails.User.UserTotalLogin</span> <br />
                                            <span><b><i>Last Logout: </i></b>@VoterDetails.User.UserLastLogout.ToString("dd/MM/yyyy, hh:mm")</span> <br />
                                        </td>

                                        <td>
                                            @VoterDetails.User.UserStatus
                                        </td>
                                        <td>
                                            @Html.ActionLink("Delete", "DeleteVoter", new { Id = VoterDetails.VoterID }, new { @class = "btn btn-danger", type = "button" })
                                        </td>
                                        <td>
                                            @Html.ActionLink("Update", "GetSingleVoter", new { Id = VoterDetails.VoterID }, new { @class = "btn btn-success", type = "button" })
                                        </td>
                                        @if (VoterDetails.User.UserStatus=="Inactive")
                                        {
                                            <td>
                                                @Html.ActionLink("Active Profile", "ActiveProfile", new { Id = VoterDetails.VoterID }, new { @class = "btn btn-success", type = "button" })
                                            </td>
                                        }
                                    </tr>
                                    serialno++;
                                }
                            }
                            else
                            {
                                <tr>
                                    <td> <h6 style="color:red; text-align:center"> <b>NO DATA FOUND</b> </h6> </td>
                                </tr>
                            }

