@model Evoting.Models.VoterCandidateViewModel

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Welcome to E-Voting</h4>
                @if (Model.Candidate.User.UserID != null)
                {
                    <p class="card-description">
                        @Model.Candidate.User.UserID
                    </p>
                }
                else
                {
                    <p class="card-description">
                        @Model.Voter.User.UserID
                    </p>
                }
            </div>
        </div>
    </div>
</div>
