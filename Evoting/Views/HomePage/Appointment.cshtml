@if (ViewData["Message"] != null)
{
    <section class="registerfromcontainer" style="background-color: lightblue; padding: 3%">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <div class="auth-form-light text-left py-5 px-4 px-sm-5 appointmentbodyform">
                        @using (Html.BeginForm("Appointment", "HomePage", FormMethod.Post, new { enctype = "multipart/form-data", @class = "appointmentform pt-3" }))
                        {
                            <h4 style="text-align: center !important;">New here?</h4>
                            <h6 style="text-align: center !important;" class="font-weight-light">Signing up is easy. It only takes a few steps</h6>
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.Appointment.UserEmaul, new { @class = "form-control form-control-lg", id = "exampleInputEmail1", placeholder = "Please Enter your Email Address" })
                                @Html.ValidationMessageFor(model => model.Appointment.UserEmaul)
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.Appointment.UserPhoneNumber, new { @class = "form-control form-control-lg", id = "exampleInputEmail1", placeholder = "Please Enter your Email Phone Number" })
                                @Html.ValidationMessageFor(model => model.Appointment.UserPhoneNumber)
                            </div>
                            <div class="form-group">
                                @Html.DropDownListFor(model => model.Appointment.AppointmentSubject, new SelectList(Model.AppointmentSubjectList, "", ""), new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                @Html.TextAreaFor(Model => Model.Appointment.AppointmentDetails, new { @class = "form-control", rows = "6", placeholder = "Enter Details" })
                            </div>
                            <div class="mb-4">
                                <div class="form-check">
                                    <label class="form-check-label text-muted">
                                        <input type="checkbox" class="form-check-input">
                                        I agree to all Terms & Conditions
                                    </label>
                                </div>
                            </div>
                            <div class="mt-3">
                                <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn"> Register</button>
                            </div>
                            <div class="text-center mt-4 font-weight-light">
                                Already have an account? <a href="login.html" class="text-primary">Login</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
}
