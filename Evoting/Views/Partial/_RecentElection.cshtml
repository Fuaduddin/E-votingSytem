@model Evoting.Models.CustomerViewModel


<!-- start pricing area -->
<div id="pricing" class="pricing-area area-padding">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="section-headline text-center">
                    <h2>Upcoming Elections</h2>
                </div>
            </div>
        </div>
        @if (Model.ElectionDetailsList.Count > 0)
        {
            <div class="row">
                @foreach (var ElectionDetails in Model.ElectionDetailsList.OrderByDescending(x=>x.StartDate).Take(3).ToList())
                {
                    <div class="col-md-4 col-sm-4 col-xs-12">
                        <div class="pri_table_list">
                            <h3>@ElectionDetails.ElectionName</h3>
                            <div>
                                <h4>Election Status: @ElectionDetails.ElectionStatus</h4>
                                <p>@ElectionDetails.ElectionDetails</p>
                            </div>
                            <a href="/SinglePage/SinglePageElectionDetails/@ElectionDetails.ElectionID" class="buttondetails">
                                Details
                            </a>
                        </div>
                    </div>
                }
            </div>
            }
        else
        {
          <div class="row">
            <h4 style="color:black; text-align: center; font-size: 29px;">
             <b>
                <i>
                    There is no latest election
                </i>
            </b>
           </h4>
          </div>
        }   
    </div>
</div>
<!-- End pricing table area -->
<style>
    .buttondetails {
        background: #444 none repeat scroll 0 0;
        border: 1px solid #444;
        color: #fff;
        margin-bottom: 25px;
        padding: 10px 35px;
        text-transform: uppercase;
        transition: all 0.4s ease 0s;
        border-radius: 30px;
    }
    .pri_table_list {
        height: 228px;
    }

</style>